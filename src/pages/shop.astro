---
import Layout from '../layouts/Layout.astro';
import BellroyProductCard from '../components/BellroyProductCard.astro';

// Updated product IDs
const productIds = ['slim-sleeve', 'hide-and-seek', 'zip-wallet'];
---

<Layout title="Bellroy Shop | Wallets Collection">
  <main>
    <div class="container">
      <h1>Wallets Collection</h1>
      
      <div class="product-grid">
        {productIds.map(id => (
          <div class="product-grid-cell">
            <BellroyProductCard productId={id} className="product-grid-item" />
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  h1 {
    font-family: 'Apercu', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 2rem;
    color: #183431;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 0;
    background-color: #ffffff; /* White background for the grid */
  }
  
  @media (min-width: 640px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .product-grid-cell {
    background-color: #ffffff; /* White background for cells */
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
  }
  
  .product-grid-item {
    flex: 1;
    display: flex;
    background-color: #f5f5f5; /* Light gray for product cards */
  }
</style>